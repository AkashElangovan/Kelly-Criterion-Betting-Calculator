{
    "manifest_version": 3,
    "name": "Kelly Criterion Betting Calculator",
    "version": "1.0",
    "description": "Calculate optimal bet size using Kelly Criterion",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": ["storage"],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }